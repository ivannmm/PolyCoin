<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PolyCoin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0972FF</item>
        <item name="colorPrimaryVariant">#0972FF</item>
        <item name="colorOnPrimary">#0972FF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0972FF</item>
        <item name="colorSecondaryVariant">#0972FF</item>
        <item name="colorOnSecondary">#0972FF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PolyCoin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PolyCoin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PolyCoin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




